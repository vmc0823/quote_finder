<%- include("partials/header.ejs") %>

<body>

    <div class="qf-page">
        <div class="qf-card card">
            <div class="card-body p-4">


    <h1>Quotes Found</h1>

    <% for (i of quotes) { %>

        <%= i.quote %> <br>
        -<em>
            <a href="#" id="<%=i.authorId%>">
                <%= i.firstName%> <%=i.lastName %>
            </a>
        </em>
        <br><br>

        <% } %>

            </div>
        </div>
    </div>


        <!-- Button trigger modal DELETE BY 10.5 lab5
